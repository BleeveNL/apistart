{
  "name": "apistart",
  "version": "0.1.0",
  "description": "Fully tested and strongly typed nodeJS framework to create microservices lightning fast!",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ],
    "cache": false,
    "report-dir": "./coverage",
    "exclude": [
      "src/tests/**/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ]
  },
  "types": "lib/index.d.ts",
  "typings": [
    "./node_modules/@types",
    "./@typesCustom"
  ],
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "scripts": {
    "build": "npm run eslint && npm run coverage && ./node_modules/.bin/rimraf ./lib && ./node_modules/.bin/tsc",
    "eslint": "./node_modules/.bin/eslint ./ --fix --ext ts,js",
    "deleteTestResults": "(rm -rf ./coverage & rm -rf ./test-results.xml)",
    "test": "snyk test && NODE_ENV=testing ./node_modules/.bin/_mocha src/tests/**/**/**.test.ts --require ts-node/register --recursive --prof --ui tdd --throw-deprecation ",
    "coverage": "npm run deleteTestResults && nyc npm test -R mocha-multi --reporter-options mocha-junit-reporter=-,spec=-",
    "test-with-coverage": "npm run deleteTestResults && nyc --reporter=lcovonly npm test && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "dev": "./node_modules/nodemon/bin/nodemon.js --config ./.nodemoncfg -x \"(reset &&  yarn build) || exit 1\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BleeveNL/apistart.git"
  },
  "keywords": [
    "NodeJS",
    "TypeScript",
    "Framework",
    "Sequelize",
    "MySQL",
    "PostgresSQL",
    "Redis",
    "Sqlite",
    "RabbitMQ",
    "amqp"
  ],
  "author": "Michel Bitter <michel+opensource@greenhome.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BleeveNL/apistart/issues"
  },
  "homepage": "https://github.com/BleeveNL/apistart#readme",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/faker": "4.1.5",
    "@types/hapi__joi": "15.0.1",
    "@types/ioredis": "4.0.11",
    "@types/lodash": "4.14.133",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.4",
    "@types/sinon": "7.0.12",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "chai": "4.2.0",
    "codacy-coverage": "3.4.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "faker": "4.1.0",
    "mocha": "6.1.4",
    "mocha-junit-reporter": "1.22.0",
    "mocha-lcov-reporter": "1.3.0",
    "mocha-multi": "1.1.0",
    "nodemon": "1.19.1",
    "nyc": "14.1.1",
    "prettier": "1.17.1",
    "prettier-stylelint": "0.4.2",
    "rimraf": "2.6.3",
    "sinon": "7.3.2",
    "snyk": "1.171.1",
    "ts-node": "8.2.0",
    "typescript": "3.5.1"
  },
  "quokka": {
    "env": "dev",
    "ts": {
      "path": "./node_modules/typescript/bin/tsc"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@hapi/joi": "15.0.3",
    "immer": "3.1.2",
    "ioredis": "4.9.5",
    "lodash": "^4.17.11",
    "loghandler": "1.0.7"
  }
}
