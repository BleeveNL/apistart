    "@types/koa__cors": "3.0.2",
    "@types/validator": "13.1.4",
    "amqplib": "0.8.0",
    "dotenv": "10.0.0",
    "immer": "9.0.3",
    "ioredis": "4.27.6",
    "joi": "^17.4.0",
    "koa": "2.13.1",
    "koa-advanced-router": "0.4.3",
    "koa-bodyparser": "4.3.0",
    "loghandler": "1.1.11",
    "pg": "8.6.0",
    "sequelize": "6.6.2"
  }
}
